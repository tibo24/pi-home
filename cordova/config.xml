<?xml version='1.0' encoding='utf-8'?>
<widget id="be.tibovermunicht.cordova_project" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pi-Home</name>
    <description>
        Pi-Home om je apparaten in huis slimmer te maken.
    </description>
    <author email="tibovermunicht@hotmail.com" href="http://cordova.io">
        Tibo Vermunicht
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="KeepRunning" value="false" />
    <engine name="browser" spec="5.0.4" />
    <engine name="android" spec="7.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-email" spec="^1.2.7" />
    <plugin name="cordova-plugin-android-fingerprint-auth" spec="^1.4.5" />
</widget>
